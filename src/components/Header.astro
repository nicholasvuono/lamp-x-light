---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
  <nav>
    <a href="/landing"><img class="header-image" src="/united_logo.png" width="120px" /></a>
    <div class="social-links">
      <a href="https://www.facebook.com/UNITEDChurchDE" target="_blank">
        <span class="sr-only">Follow UNITED Church on Facebook</span>
        <img src="fb.png" width="32" height="32" />
      </a>
      <a href="https://www.instagram.com/UNITEDChurchDE/" target="_blank">
        <span class="sr-only">Follow UNITED Church on Instagram</span>
        <img src="insta.png" width="32" height="32" />
      </a>
      <a href="https://www.youtube.com/channel/UC5vPn2v88BwSUbIYio4AX9Q/videos" target="_blank">
        <span class="sr-only">Follow UNITED Church on YouTube</span>
        <img src="yt.png" width="32" height="32" />
      </a>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
